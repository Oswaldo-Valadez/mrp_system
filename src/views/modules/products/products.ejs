<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>
          {{%= __('Products') %}}
          <small>{{%= __('Products') %}}</small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <a href="/">{{%= __('Dashboard') %}}</a>
          </li>
          <li class="breadcrumb-item active">{{%= __('Products') %}}</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary card-outline">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-edit"></i>
              {{%= __('Product') %}}
            </h3>
            <div class="card-tools">
              <a
                href="#"
                data-target="#modalCreateProduct"
                data-toggle="modal"
                class="btn btn-success"
                title="{{%= __('New Product') %}}"
              >
                <i class="fas fa-plus"></i> &nbsp; {{%= __('New Product') %}}
              </a>
            </div>
          </div>
          <div class="card-body">
            <table
              class="
                table table-bordered table-striped
                dataTable
                dataTableConfig
                dtr-inline
              "
              aria-describedby="dataTableConfig_info"
            >
              <thead>
                <tr role="row">
                  <th>#</th>
                  <th>{{%= __('Name') %}}</th>
                  <th>{{%= __('Description') %}}</th>
                  <th>{{%= __('Actions') %}}</th>
                </tr>
              </thead>
              <tbody>
                {{% products.forEach((row, i) => { %}}
                <tr class="odd">
                  <td>{{%= i + 1 %}}</td>
                  <td>{{%= row.name %}}</td>
                  <td>{{%= row.description %}}</td>
                  <td>
                    <div class="column-actions">
                      <a
                        href="#"
                        data-toggle="modal"
                        data-target="#modalDeleteProduct"
                        data-id="{{%= row.id_product %}}"
                        class="btn btn-danger btn-xs"
                      >
                        <i class="fas fa-trash-alt"></i>
                      </a>
                      <a
                        href="#"
                        data-toggle="modal"
                        data-target="#modalEditProduct"
                        data-row="{{%= JSON.stringify(row) %}}"
                        data-id="{{%= row.id_product %}}"
                        class="btn btn-warning btn-xs"
                      >
                        <i class="fas fa-pen"></i>
                      </a>
                    </div>
                  </td>
                </tr>
                {{% }) %}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{%- include('../../components/ModalCreate', { idModal: "modalCreateProduct", route:'/dashboard/products', title: "Product", form: [], size: "modal-xl" }) %}}
{{%- include('../../components/ModalDelete', { idModal: "modalDeleteProduct", route:['/dashboard/products/','/delete'], title: "Product" }) %}}
{{%- include('../../components/ModalEdit', { idModal: "modalEditProduct", route: '/dashboard/products/', title: "Product", form: [], size: "modal-xl" }) %}}

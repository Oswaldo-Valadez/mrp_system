<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>
          {{%= __('Purchases') %}}
          <small class="text-muted">{{%= __('New Purchase') %}}</small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <a href="/">{{%= __('Dashboard') %}}</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/dashboard/purchases">{{%= __('Purchases') %}}</a>
          </li>
          <li class="breadcrumb-item active text-muted">
            {{%= __('New Purchase') %}}
          </li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <form action="/dashboard/purchases" method="POST">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-edit"></i>
                {{%= __('Purchase Info') %}}
              </h3>
            </div>
            <div class="card-body">
              {{%- include('../../components/Form', { form: newPurchaseForm}) %}}
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-boxes"></i>
                {{%= __('Purchase Components') %}}
              </h3>
              <div class="card-tools">
                <a
                  href="#"
                  data-target="#modalAddPurchaseComponent"
                  data-toggle="modal"
                  class="btn btn-success"
                  title="{{%= __('Add Component') %}}"
                >
                  <i class="fas fa-plus"></i> &nbsp;
                  {{%= __('Add Component') %}}
                </a>
              </div>
            </div>
            <div class="card-body">
              <table
                class="table table-bordered table-striped"
                aria-describedby="dataTableConfig_info"
              >
                <thead>
                  <tr>
                    <th>{{%= __('ID') %}}</th>
                    <th>{{%= __('Component') %}}</th>
                    <th>{{%= __('Quantity') %}}</th>
                  </tr>
                </thead>
                <tbody id="tb-purchase-components"></tbody>
              </table>
            </div>
            <div class="card-footer clearfix">
              <button type="submit" class="btn btn-sm btn-success float-right">
                {{%= __('Submit') %}}
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

{{%- include('../../components/ModalCreate', { idModal: "modalAddPurchaseComponent", title: "Purchase", form: addPurchaseComponentForm, size: "modal-lg" }) %}}
{{%- include('../../components/ModalDelete', { idModal: "modalDeletePurchaseComponent", title: "Purchase" }) %}}
{{%- include('../../components/ModalEdit', { idModal: "modalEditPurchaseComponent", title: "Purchase", form: addPurchaseComponentForm, size: "modal-lg" }) %}}

<script src="/public/assets/js/modules/purchases/new-purchase.scripts.js"></script>

<!DOCTYPE html>
<html lang="en">
  <head>
    {{%- include('./partials/head') %}}
  </head>

  <body class="hold-transition sidebar-mini {{%= dark_mode ? null : "dark-mode" %}} layout-fixed layout-navbar-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <div
        class="preloader flex-column justify-content-center align-items-center"
      >
        <img
          src="/public/assets/imgs/logo.png"
          alt="Logo"
          style="
            position: absolute;
            top: calc(50% - 35px);
            left: calc(50% - 35px);
            z-index: 10000;
          "
          height="70"
          width="70"
        />
        <div class="gear animation__spin">
          <div class="center"></div>
          <div class="tooth"></div>
          <div class="tooth"></div>
          <div class="tooth"></div>
          <div class="tooth"></div>
        </div>  
      </div>
      
      {{%- include('./partials/header') %}}
      {{%- include('./partials/sidebar') %}}
      <div class="content-wrapper">
        <div id="toastsContainerTopRight" class="toasts-top-right fixed"></div>
        {{%- body %}}
      </div>
      {{%- include('./partials/footer') %}}
    </div>

    {{%- include('./partials/js') %}}
    {{%- include('./partials/messages')  %}}
    {{%- script %}}
  </body>
</html>
